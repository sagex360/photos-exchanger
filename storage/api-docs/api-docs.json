    "components": {
        "schemas": {
            "FileIdentifierResource": {
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "files"
                    },
                    "id": {
                        "type": "integer",
                        "example": "1"
                    }
                },
                "type": "object"
            },
            "FileLinkTokensRelatedResource": {
                "properties": {
                    "links": {
                        "properties": {
                            "self": {
                                "type": "string",
                                "example": "http://localhost:8000/api/files/1/link_tokens"
                            }
                        },
                        "type": "object"
                    },
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/LinkTokenResource"
                        }
                    }
                },
                "type": "object"
            },
            "FileLinkTokensRelationshipResource": {
                "properties": {
                    "links": {
                        "properties": {
                            "self": {
                                "type": "string",
                                "example": "http://localhost:8000/api/files/1/relationships/link_tokens"
                            },
                            "related": {
                                "type": "string",
                                "example": "http://localhost:8000/api/files/1/link_tokens"
                            }
                        },
                        "type": "object"
                    },
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/LinkTokenIdentifierResource"
                        }
                    }
                },
                "type": "object"
            },
            "FileResource": {
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "files"
                    },
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "attributes": {
                        "properties": {
                            "public_name": {
                                "type": "string",
                                "example": "Some name"
                            },
                            "description": {
                                "type": "string",
                                "example": "Sensitive Description"
                            },
                            "will_be_deleted_at": {
                                "type": "string",
                                "format": "date-time",
                                "nullable": true
                            }
                        },
                        "type": "object"
                    },
                    "relationships": {
                        "properties": {
                            "user": {
                                "$ref": "#/components/schemas/FileUserRelationshipResource"
                            },
                            "link_tokens": {
                                "$ref": "#/components/schemas/FileLinkTokensRelationshipResource"
                            }
                        },
                        "type": "object"
                    },
                    "links": {
                        "properties": {
                            "self": {
                                "type": "string",
                                "example": "http://localhost:8000/api/files/1"
                            },
                            "resource": {
                                "type": "string",
                                "example": "http://localhost:8000/storage/uploads/files/qCgqGAf88xif2IHR7ElLHSlaTqLmqMJdjFzBw3LB.png"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "FileUserRelationshipResource": {
                "properties": {
                    "links": {
                        "properties": {
                            "self": {
                                "type": "string",
                                "example": "http://localhost:8000/api/files/1/relationships/user"
                            },
                            "related": {
                                "type": "string",
                                "example": "http://localhost:8000/api/users/1"
                            }
                        },
                        "type": "object"
                    },
                    "data": {
                        "$ref": "#/components/schemas/UserIdentifierResource"
                    }
                },
                "type": "object"
            },
            "LinkTokenIdentifierResource": {
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "link_tokens"
                    },
                    "id": {
                        "type": "integer",
                        "example": "1"
                    }
                },
                "type": "object"
            },
            "LinkTokenResource": {
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "link_tokens"
                    },
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "attributes": {
                        "properties": {
                            "token": {
                                "type": "string",
                                "example": "9194e805-0408-4184-8ad1-22744d1ffe17"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "disposable",
                                    "unlimited"
                                ]
                            },
                            "created_at": {
                                "type": "string",
                                "format": "date-time"
                            },
                            "updated_at": {
                                "type": "string",
                                "format": "date-time"
                            }
                        },
                        "type": "object"
                    },
                    "links": {
                        "properties": {
                            "self": {
                                "type": "string",
                                "example": "http://localhost:8000/api/link_tokens/1"
                            },
                            "resource": {
                                "type": "string",
                                "example": "http://localhost:8000/api/guest/files/9194e805-0408-4184-8ad1-22744d1ffe17"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "UserIdentifierResource": {
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "users"
                    },
                    "id": {
                        "type": "integer",
                        "example": "1"
                    }
                },
                "type": "object"
            },
            "UserResource": {
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "users"
                    },
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "attributes": {
                        "properties": {
                            "name": {
                                "type": "string",
                                "example": "John"
                            },
                            "email": {
                                "type": "string",
                                "example": "hello-world@gmail.com"
                            },
                            "email_verified_at": {
                                "type": "string",
                                "format": "date-time",
                                "nullable": true
                            }
                        },
                        "type": "object"
                    },
                    "links": {
                        "properties": {
                            "self": {
                                "type": "string",
                                "example": "http://localhost:8000/api/users/1"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
        },
        "parameters": {
            "header-accept-type": {
                "name": "Accept",
                "in": "header",
                "description": "Accept type",
                "required": true,
                "schema": {
                    "type": "string",
                    "example": "application/json"
                }
            },
            "header-authorization-token": {
                "name": "Authorization",
                "in": "header",
                "description": "Api authorization user token",
                "required": true,
                "schema": {
                    "type": "string",
                    "example": "Bearer 9194773b-3f24-42bb-93ca-654557dd303c"
                }
            },
            "file-id-path-parameter": {
                "name": "fileId",
                "in": "path",
                "description": "File id",
                "required": true,
                "schema": {
                    "type": "integer",
                    "example": "1"
                }
            },
            "link-token-path-parameter": {
                "name": "linkToken",
                "in": "path",
                "description": "Generated token for visits.",
                "required": true,
                "schema": {
                    "type": "string",
                    "example": "9194e805-0408-4184-8ad1-22744d1ffe17ff"
                }
            },
            "user-id-path-parameter": {
                "name": "userId",
                "in": "path",
                "description": "User id",
                "required": true,
                "schema": {
                    "type": "integer",
                    "example": "1"
                }
            }
        },
        "requestBodies": {
            "store-file-request-body": {
                "description": "File and it's information.",
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "required": [
                                "public_name",
                                "description",
                                "file"
                            ],
                            "properties": {
                                "public_name": {
                                    "type": "string",
                                    "example": "Some name"
                                },
                                "description": {
                                    "type": "string",
                                    "example": "Sensitive Description"
                                },
                                "date_to_delete": {
                                    "type": "string",
                                    "format": "date"
                                },
                                "file": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "create-link-token-request-body": {
                "description": "Link token information.",
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "required": [
                                "link_type"
                            ],
                            "properties": {
                                "link_type": {
                                    "type": "string",
                                    "enum": [
                                        "disposable",
                                        "unlimited"
                                    ]
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "bearer_auth": {
                "type": "http",
                "name": "bearer_auth",
                "in": "header",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "FileRelationships",
            "description": "This api provides access to file relationships in the system."
