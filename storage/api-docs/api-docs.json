{
    "openapi": "3.0.0",
    "info": {
        "title": "Users API",
        "description": "This api provides access to users in system.",
        "version": "1.0.0"
    },
    "paths": {
        "/api/users/{userId}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get single user by id",
                "description": "Returns user information",
                "operationId": "getUserById",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "User id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful get operation"
                    },
                    "404": {
                        "description": "User with specified id not found."
                    },
                    "401": {
                        "description": "Authorization failed. Bearer token mismatch."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "UserResource": {
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "users"
                    },
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "attributes": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "email": {
                                    "type": "string",
                                    "example": "hello-world@gmail.com"
                                },
                                "email_verified_at": {
                                    "type": "string",
                                    "format": "date-time"
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Users",
            "description": "API Endpoints of Users"
        }
    ],
    "security": [
        []
    ]
}